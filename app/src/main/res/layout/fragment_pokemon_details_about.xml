<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_theme_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/pokemonDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:maxLines="2"
        tools:text="@tools:sample/lorem/random"
        tools:textColor="@color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemonDescription">

        <include
            android:id="@+id/hp"
            layout="@layout/single_base_stat" />

        <include
            android:id="@+id/attack"
            layout="@layout/single_base_stat" />

        <include
            android:id="@+id/defense"
            layout="@layout/single_base_stat" />

        <include
            android:id="@+id/spAttack"
            layout="@layout/single_base_stat" />

        <include
            android:id="@+id/spDefense"
            layout="@layout/single_base_stat" />

        <include
            android:id="@+id/speed"
            layout="@layout/single_base_stat" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>